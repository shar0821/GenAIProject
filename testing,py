import time
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.common.keys import Keys

# Set up Selenium WebDriver (Make sure to replace with your driver path if needed)
driver = webdriver.Chrome()  # Or webdriver.Firefox() based on your browser
driver.get("http://localhost:8501")  # Default Streamlit URL

time.sleep(3)  # Wait for the app to load

# Check if the page title is loaded correctly
try:
    header = driver.find_element(By.TAG_NAME, "h1")  # Find header element
    print(f"Page loaded with title: {header.text}")
except:
    print("Failed to find the header")

# Interact with a text input if it exists
try:
    input_box = driver.find_element(By.TAG_NAME, "input")  # Finds first input field
    input_box.send_keys("Hello, Streamlit!")
    input_box.send_keys(Keys.RETURN)
    print("Text input tested successfully!")
except:
    print("No input field found.")

# Close the driver
driver.quit()

print("Test completed.")